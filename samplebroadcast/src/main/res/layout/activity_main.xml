<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_medium">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/appColor"
            android:textSize="@dimen/text_size_small"
            tools:text="Version x.y.z" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLive"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w_113"
            android:layout_gravity="center"
            tools:src="@drawable/live" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_select_basic"
            android:textColor="@color/appColor"
            android:textSize="@dimen/text_size_large" />

        <com.uiza.rtpstreamer.FadedDisableButton
            android:id="@+id/bBroadcastBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:text="BroadCastBasicActivity (Foreground)" />

        <com.uiza.rtpstreamer.FadedDisableButton
            android:id="@+id/bBroadcastBackgroundBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:text="BackgroundBasicActivity" />

        <com.uiza.rtpstreamer.FadedDisableButton
            android:id="@+id/bDisplayBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:text="DisplayBasicActivity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_large"
            android:text="@string/tv_select"
            android:textColor="@color/appColor"
            android:textSize="@dimen/text_size_large" />

        <com.uiza.rtpstreamer.FadedDisableButton
            android:id="@+id/bBroadcastAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:text="BroadCastAdvancedActivity (Foreground)" />

        <com.uiza.rtpstreamer.FadedDisableButton
            android:id="@+id/bBroadcastBackgroundAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:text="BackgroundAdvancedActivity" />

        <com.uiza.rtpstreamer.FadedDisableButton
            android:id="@+id/bDisplayAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:text="DisplayAdvancedActivity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_large"
            android:text="Player"
            android:textColor="@color/appColor"
            android:textSize="@dimen/text_size_large" />

        <com.uiza.rtpstreamer.FadedDisableButton
            android:id="@+id/btPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:text="PlayerBasicActivity" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
